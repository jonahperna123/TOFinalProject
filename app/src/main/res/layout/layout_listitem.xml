<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/parent_layout" android:padding="30dp">

    <TextView
        android:id="@+id/textViewMovieLayoutItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Movie Title" />

    <TextView
        android:id="@+id/textViewMovieLayoutItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMovieLayoutItemTitle"
        android:text="Movie ID" />


</RelativeLayout>